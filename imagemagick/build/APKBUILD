pkgname=imagemagick
_pkgname=ImageMagick
pkgver=7.1.1.36
pkgrel=0
_pkgver=${pkgver%.*}-${pkgver##*.}
_abiver=7
pkgdesc="Collection of tools and libraries for many image formats"
url="https://imagemagick.org/"
arch="all"
license="ImageMagick"
options="libtool"
depends="
	ghostscript"
depends_dev="$pkgname=$pkgver-r$pkgrel"
install="$pkgname.post-upgrade"
makedepends="
	chrpath
	fftw-dev
	fontconfig-dev
	freetype-dev
	ghostscript-dev
	lcms2-dev
	libheif-dev
	libjpeg-turbo-dev
	libpng-dev
	libraw-dev
	librsvg-dev
	libtool
	libwebp-dev
	libx11-dev
	libxext-dev
	libxml2-dev
	openexr-dev
	openjpeg-dev
	pango-dev
	perl-dev
	tiff-dev
	zlib-dev
	"

checkdepends="freetype fontconfig ghostscript ghostscript-fonts lcms2 graphviz"
subpackages="
	$pkgname-libs
	$pkgname-heic
	$pkgname-jpeg
	$pkgname-pango
	$pkgname-pdf
	$pkgname-raw
	$pkgname-svg
	$pkgname-tiff
	$pkgname-webp
	"
source="https://imagemagick.org/archive/releases/ImageMagick-$_pkgver.tar.xz"
builddir="$srcdir/$_pkgname-$_pkgver"

case "$CARCH" in
s390x)
	;;
*)
	makedepends="$makedepends libjxl-dev"
	subpackages="$subpackages $pkgname-jxl"
	_jxl="--with-jxl"
	;;
esac

