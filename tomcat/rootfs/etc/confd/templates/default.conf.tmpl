server {
    listen 80;
    client_max_body_size {{ getenv "TOMCAT_NGINX_CLIENT_MAX_BODY_SIZE" }};
    location / {
        proxy_set_header   X-Forwarded-For $remote_addr;
        proxy_set_header   Host $http_host;
        proxy_pass         "http://127.0.0.1:8080";
        fastcgi_read_timeout {{ getenv "TOMCAT_NGINX_FASTCGI_READ_TIMEOUT" }};
        fastcgi_send_timeout {{ getenv "TOMCAT_NGINX_FASTCGI_SEND_TIMEOUT" }};
        fastcgi_connect_timeout {{ getenv "TOMCAT_NGINX_FASTCGI_CONNECT_TIMEOUT" }};
        proxy_read_timeout {{ getenv "TOMCAT_NGINX_PROXY_READ_TIMEOUT" }};
        proxy_send_timeout {{ getenv "TOMCAT_NGINX_PROXY_SEND_TIMEOUT" }};
        proxy_connect_timeout {{ getenv "TOMCAT_NGINX_PROXY_CONNECT_TIMEOUT" }};
        send_timeout {{ getenv "TOMCAT_NGINX_SEND_TIMEOUT" }};
        keepalive_timeout {{ getenv "TOMCAT_NGINX_KEEPALIVE_TIMEOUT" }};
        client_body_timeout {{ getenv "TOMCAT_NGINX_CLIENT_BODY_TIMEOUT" }};
        lingering_timeout {{ getenv "TOMCAT_NGINX_LINGERING_TIMEOUT" }};
    }
}
