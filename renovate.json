{
  "extends": [
    "config:best-practices",
    ":rebaseStalePrs",
    "customManagers:dockerfileVersions"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "dockerfile",
        "docker-compose",
        "gradle",
        "gradle-wrapper",
        "composer"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "groupName": "all non-major dependencies",
      "matchPackageNames": [
        "*"
      ],
      "postUpgradeTasks": {
        "commands": [
          "bash ci/update-sha.sh \"{{{depName}}}\" \"{{{newVersion}}}\""
        ]
      }
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)tomcat/Dockerfile$"
      ],
      "matchStrings": [
        "ARG TOMCAT_VERSION=\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "custom.tomcat",
      "depNameTemplate": "apache-tomcat",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)activemq/Dockerfile$"
      ],
      "matchStrings": [
        "ARG ACTIVEMQ_VERSION=\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "custom.activemq",
      "depNameTemplate": "apache-activemq",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "activemq": {
      "defaultRegistryUrlTemplate": "https://downloads.apache.org/activemq/",
      "format": "html",
      "transformTemplates": [
        "{ \"releases\":[ $map($filter(releases.version,function($v,$i,$a){ $substring($v,0,1)=\"5\" }),function($v,$i,$a){ { \"version\":$substring($v,0,$length($v)-1) } })] }"
      ]
    },
    "tomcat": {
      "defaultRegistryUrlTemplate": "https://downloads.apache.org/tomcat/tomcat-9/",
      "format": "html",
      "transformTemplates": [
        "{ \"releases\":[ $map($filter(releases.version,function($v,$i,$a){ $substring($v,0,1)=\"v\" }),function($v,$i,$a){ { \"version\":$substring($v,1,$length($v)-2) } })] }"
      ]
    }
  },
  "labels": [
    "dependencies"
  ],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "unresolved",
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
